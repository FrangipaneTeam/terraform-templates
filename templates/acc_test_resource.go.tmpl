import (
	"testing"

	"github.com/hashicorp/terraform-plugin-sdk/v2/helper/resource"

	tests "github.com/orange-cloudavenue/terraform-provider-cloudavenue/internal/tests/common"
)

//go:generate go run github.com/FrangipaneTeam/tf-doc-extractor@latest -filename $GOFILE -example-dir ../../../examples -test
const testAcc{{ .CamelName }}ResourceConfig = `
resource "cloudavenue_{{ .CategoryName }}{{if ne .ResourceName ""}}_{{ .ResourceName }}{{ end }}" "example" {
}
`

const testAcc{{ .CamelName }}ResourceConfigUpdate = `
resource "cloudavenue_{{ .CategoryName }}{{if ne .ResourceName ""}}_{{ .ResourceName }}{{ end }}" "example" {
}
`

func {{ .LowerCamelName }}TestCheck(resourceName string) resource.TestCheckFunc {
	return resource.ComposeAggregateTestCheckFunc(
		resource.TestCheckResourceAttrSet(resourceName, "id"),
	)
}

func TestAcc{{ .CamelName }}Resource(t *testing.T) {
	resourceName := "cloudavenue_{{ .CategoryName }}{{if ne .ResourceName ""}}_{{ .ResourceName }}{{ end }}.example"

	resource.Test(t, resource.TestCase{
		PreCheck:                 func() { tests.TestAccPreCheck(t) },
		ProtoV6ProviderFactories: tests.TestAccProtoV6ProviderFactories,
		Steps: []resource.TestStep{
			// Read testing
			{
				// Apply test
				Config: testAcc{{ .CamelName }}ResourceConfig,
				Check: {{ .LowerCamelName }}TestCheck(resourceName),
			},
			// Update testing
			{
				// Update test
				Config: testAcc{{ .CamelName }}ResourceConfigUpdate,
				Check: resource.ComposeAggregateTestCheckFunc(
					resource.TestCheckResourceAttrSet(resourceName, "id"),
				),
			},
			// Import State testing
			{
				// Import test
				ResourceName:            resourceName,
				ImportState:             true,
				ImportStateVerify:       true,
			},
		},
	})
}
